{ 
    "verbose": false,
    "roots" : ["./spec"],
    "transform": {
        "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleDirectories": [
        "node_modules",
        "public"
    ],
    "testRegex": "(\\.|/)(test)\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json"
    ],
    "setupFiles": [
        "./public/test/jest-shim.ts",
        "./public/test/jest-setup.ts"
    ],
    "snapshotSerializers": [
        "enzyme-to-json/serializer"
    ]
}